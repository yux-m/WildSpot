<% layout('/layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">New Spot</h1>
    <div class="col-6 offset-md-3">
        <form action="/spots" method="POST" novalidate class='validated-form' enctype='multipart/form-data'>
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="spot[title]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="species">Species</label>
                <input class="form-control" type="text" id="species" name="spot[species]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="spot[location]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3">
              <label for="formFileMultiple" class="form-label">Upload Images</label>
              <input class="form-control" type="file" id="image" name="image" multiple>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="spot[description]" required></textarea>
            </div>


            <div class="mb-3">
                <button class="btn btn-success">Add Spot</button>
            </div>
        </form>
        <a href="/spots">All Spots</a>
    </div>


</div>
